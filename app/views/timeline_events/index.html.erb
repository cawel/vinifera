<% @title = "Derni&egrave;res critiques" %>
<% content_for :page_title_with_link do %>
  <%= link_to image_tag("/images/icons/feed.png"), activity_feed_url, :title => "Derni&egrave;res critiques" %>&nbsp; Derni&egrave;res critiques
<% end %>

<table class="activity_stream">
  <tbody>
    <% @timeline_events.each do |event| %>
      <tr>
        <td class="wine">
          <span class="bottle">
            <%= link_to image_tag( glass_image_filename(event.subject.wine), :alt => event.subject.wine.name), wine_reviews_url(event.subject.wine), :title => event.subject.wine.name %>
          </span>
          <%= link_to event.subject.wine.name, wine_reviews_url(event.subject.wine), :title => event.subject.wine.name, :class => "name" %>
          <span class="rating">
            <%= stars_rating event.subject.rating %>
          </span>
          <small>
            Une critique
            <% case event.event_type when "reviewed" %>
              cr&#233;&#233;e
            <% when "edited" %>
              modifi&#233;e
            <% end %>
            par 
            <%= link_to event.actor.name, person_url(event.actor) %>, il y a <%= time_ago_in_words event.created_at %>. 
          </small>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
