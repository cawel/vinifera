<div id="masthead">
  <div class="page_width">
    <%= image_tag 'glasses/red_small.png', :style => "margin-left: -5px; padding-top: 3px; float: left" %>
    <h1><%= link_to "Le Tastevin", root_url, :title => "Accueil" %></h1>
    <p>Nos critiques de vin</p>
    <ul id="utilities">
      <% if logged_in? -%>
        <li><%= link_to "mon compte", person_url(current_person), :title => "Compte de #{person_display_name(current_person)}" %></li>
        <li class="last"><%= link_to "terminer la session", logout_path, :title => "Terminer la session" %></li>
      <% else -%>
        <li><%= link_to "ouvrir une session", login_path,  :title => "Ouvrir une session" %></li>
        <li class="last"><%= link_to "créer un compte", signup_path, :title => "Créer un compte" %></li>
      <% end -%>
    </ul>
    <form id="search" action="/resultats-de-recherche" method="get">
      <input type="text" name="q" value="<%= params[:q] %>" class="search"/>
      <input type="submit" value="Rechercher"/>
    </form>
  </div>
</div>
