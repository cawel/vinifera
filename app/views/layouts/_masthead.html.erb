<div id="masthead">
  <div class="page_width">
    <h1><%= link_to "Viniferam", root_url, :title => "Accueil" %></h1>
    <p>Les vins du monde</p>
    <ul id="nav">
      <li><%= link_to "Accueil", root_url, :title => "Accueil" %></li>
      <li><%= link_to "Liste des vins", wines_url, :title => "Liste des vins" %></li>
    </ul>
    <ul id="utilities">
      <% if logged_in? -%>
        <li><%= link_to "Mon Profile", edit_person_url(current_person), :title => "Compte de #{current_person.email}" %></li>
        <li class="last"><%= link_to "Quitter", logout_path, :title => "Quiter la session" %></li>
      <% else -%>
        <li><%= link_to "Ouvrir une session", login_path,  :title => "Ouvrir une session" %></li>
        <li class="last"><%= link_to "S'enregistrer", signup_path, :title => "S'enregistrer" %></li>
      <% end -%>
    </ul>
    <form id="search">
      <input/>
      <%= link_to_function "Recherche", "$(this).parents('form').submit()", :title => "Recherche", :class => "button submit" %>
    </form>
  </div>
</div>