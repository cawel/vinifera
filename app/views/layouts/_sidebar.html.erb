<% if logged_in? -%>
  <p class="actions"><%= link_to "Mon journal de critiques (#{@review_count})", person_reviews_index_url(:person_id => current_person.id), :title => "Mon journal de critiques", :class => "button reviews" %></p>
  <p class="actions"><%= link_to "Mon cellier (#{@cellar_count})", person_cellars_url(current_person) , :title => "Mon cellier", :class => "button cellar" %></p>
<% end %>

<div id="sidebar_wines" class="panel">
  <h3>Top des vins</h3>
  <div class="content">
    <ol>
      <% @top_wines.andand.each do |wine| %>
        <li>
          <%= link_to content_tag(:strong, wine.name), wine_reviews_path(wine), :title => wine.name %>
          <small><%= pluralize(wine.review_count, 'critique') %></small>
        </li>
      <% end %>
    </ol>
  </div>
</div>

<div id="sidebar_reviews" class="panel">
  <h3>Top contributeurs</h3>
  <div class="content">
    <ol>
      <% @top_contributers.andand.each do |user| %>
        <li>
          <%= link_to content_tag(:strong, person_display_name(user)), person_path(user.id), :title => user.name %>
          <small><%= pluralize(user.review_count, 'critique') %></small>
        </li>
      <% end %>
    </ol>
  </div>
</div>

