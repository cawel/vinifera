<% if logged_in? -%>
  <!-- p class="actions"><%= link_to "Ajouter un vin", new_wine_url, :title => "Ajouter un vin", :class => "button add" %></p -->
  <p class="actions"><%= link_to "Mon journal de critiques", person_reviews_index_url(:person_id => current_person.id), :title => "Mon journal de critiques", :class => "button reviews" %></p>
<% end %>

<div id="sidebar_reviews" class="panel">
  <h3>Top des contributeurs</h3>
  <div class="content">
    <ol>
      <% @top_contributers.each do |user| %>
        <li>
          <%= link_to content_tag(:strong, user.name), person_path(user.id), :title => user.name %>
          <small><strong><%= user.review_count %></strong> critiques</small>
        </li>
      <% end %>
    </ol>
  </div>
</div>

<div id="sidebar_wines" class="panel">
  <h3>Top des vins</h3>
  <div class="content">
    <ol>
      <% @top_wines.each do |wine| %>
        <li>
          <%= link_to content_tag(:strong, wine.name), wine_reviews_path(wine), :title => wine.name %>
          <small><strong><%= wine.review_count %></strong> critiques</small>
        </li>
      <% end %>
    </ol>
  </div>
</div>