<% @title = "Mon journal de critiques" %>

<% unless @reviews.empty? %>
  <table>
    <thead>
      <th>Cote</th>
      <th>Vin</th>
      <th>Critique</th>
      <th></th>
    </thead>
    <tbody>
      <%- @reviews.each do |review| %>
        <tr class="<%= cycle("even", "odd") %>">
          <td class="rating"><%= stars_rating review.rating %></td>
          <td><%= link_to review.wine.name, review.wine %></td>
          <td><%=format_review_comment review.comment %></td>
          <td class="actions">
            <% editable_review?(review) do %>
              <%= link_to "Mettre à jour", edit_wine_review_path(review.wine, review), :title => "Mettre à jour", :class => "update" %>
            <% end %>
            <% editable_review?(review) do %>
              <%= link_to "Supprimer", wine_review_path(review.wine, review), :confirm => 'Are you sure?', :title => "Supprimer", :method => :delete, :class => "remove" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>
