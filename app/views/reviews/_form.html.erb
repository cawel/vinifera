<p>
  <%= f.label :review_rating_id, "Cote" %>
  <ul class="star_rating">
    <li class="stars_1 current"><%= link_to "1 &#233;toile", "javascript:;", :title => "1 &#233;toile" %></li>
    <li class="stars_2"><%= link_to "2 &#233;toiles", "javascript:;", :title => "2 &#233;toiles" %></li>
    <li class="stars_3"><%= link_to "3 &#233;toiles", "javascript:;", :title => "3 &#233;toiles" %></li>
    <li class="stars_4"><%= link_to "4 &#233;toiles", "javascript:;", :title => "4 &#233;toiles" %></li>
    <li class="stars_5"><%= link_to "5 &#233;toiles", "javascript:;", :title => "5 &#233;toiles" %></li>
  </ul>
  <input type="hidden" id="review_rating_id" name="review[rating_id]" />
  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to image_tag("/images/icons/help.png", :title => "Signification des cotes" ), "" %> 
</p>
<script type="text/javascript">
  $("ul.star_rating li").removeClass("current");
  $("ul.star_rating li.stars_<%= @review.rating.id %>").addClass("current");
  $("#review_rating_id").val(<%= @review.rating.id.to_s %>);
</script>
<p>
<%= f.label :comment, "Commentaire"  %>
  <%= f.text_area :comment, :cols => 50, :rows => 10 %>
</p>
