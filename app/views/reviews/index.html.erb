<div id="wine_for_review">
    <h1>Wine</h1>
    <p>
        Name: <%=h @wine.name %>
    </p>
	<p>
    <b>Variety:</b>
    <%=h @wine.variety_wines.map{|e|e.variety.name}.join(', ') %>
</p>
    <p>
        Year: <%=@wine.year %>
    </p>
    <h1>Listing Reviews [<%=image_tag 'add.gif', :class=>'icon'%><%= link_to 'Add New Review', new_wine_review_url(params[:wine_id]) %>]</h1>
</div>
<table>
    <tr>
        <th>
            Rating
        </th>
        <th>
            Comment
        </th>
        <th>
            Person
        </th>
    </tr>
    <%- @reviews.each do |review| %>
    <tr>
        <td>
            <%=h review.rating.name %>
        </td>
        <td>
            <%=h review.comment %>
        </td>
        <td>
            <%=h review.person.email %>
        </td>
        <td>
            <%=link_to 'Show', wine_review_url(review.wine, review) %>
        </td>
        <td>
            <%=image_tag 'emblem-unreadable.gif', :class=>'icon'%> <%=link_to 'Edit', edit_wine_review_url(review.wine, review) %>
        </td>
        <td>
            <%=link_to 'Destroy', wine_review_url(review.wine, review), :confirm => 'Are you sure?', :method => :delete %>
        </td>
    </tr>
    <% end %>
</table>
<br/>