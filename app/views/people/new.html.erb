<% @title = I18n.t(:new_user_sign_up) %>

<% @person.password = @person.password_confirmation = nil %>

<%= error_messages_for :person, :object_name => "usager" %>
<% form_for :person, :url => people_path, :html => { :class => "lw200" } do |f| -%>
  <p>
    <%= f.label 'name', I18n.t(:name) %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label 'email', I18n.t(:email) %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label 'password', I18n.t(:password) %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label 'password_confirmation', I18n.t(:password_confirmation) %>
    <%= f.password_field :password_confirmation %>
  </p>
  <p class="submit indent">
    <%= submit_tag I18n.t(:sign_up) %>
  </p>
<% end -%>
